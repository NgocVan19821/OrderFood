<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Melting Cheese"
            android:textStyle="bold"
            android:textColor="#515660"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_fire"
            android:drawableTint="@color/fire"
            android:text="44 Calories"
            android:textSize="20sp"
            android:textColor="@color/pink"
            android:layout_marginVertical="20dp"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgFood"
            android:src="@drawable/ic_chinese_food"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:text="$ 9.65"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/pink"
            android:layout_marginVertical="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addcart"
            android:background="@drawable/bg_corner_pink"
            android:backgroundTint="@color/pink"
            android:text="+"
            android:textSize="30sp"
            android:textColor="@color/white"/>

    </LinearLayout>
    

</androidx.cardview.widget.CardView>